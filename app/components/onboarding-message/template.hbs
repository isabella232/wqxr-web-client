{{#liquid-if showOnboardingMessage}}
<div class="onboarding-message-container">
  <a href="#" class="onboarding-close" {{action 'hideOnboardMessage'}}>{{svg-jar "close"}} </a>
  <div class="text-and-note">
    <div class="music-note-container">
      {{svg-jar "noun-music" class="music-note" }}
    </div>
    <div class="onboarding-message-text-container">
      <div class="first-half">
        <h3 class="onboarding-title" data-test-element="title">You're invited...</h3>
      </div>
      <div class="second-half">
        <p class="onboarding-body" data-test-element="body">...to our new, experimental WQXR.org! We want to hear what you think.</p>
        <div class="onboarding-link-container">
          <a class="onboarding-link" href="https://beta.wqxr.org/listen" target="_blank">
            <div class="onboarding-button" data-test-element="button">Visit The New WQXR.org</div>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
{{/liquid-if}}

{{yield}}
